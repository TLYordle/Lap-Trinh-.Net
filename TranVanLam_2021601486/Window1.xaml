<Window x:Class="TranVanLam_2021601486.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TranVanLam_2021601486"
        mc:Ignorable="d"
        Title="Window2" Height="450" Width="800">
    <Grid>
        <DataGrid Name="dgvThongke" Margin="30,100,30,175"                  AutoGenerateColumns="False"                  AlternatingRowBackground="LightBlue"
                  CanUserAddRows="False">            <DataGrid.Columns>
                <DataGridTextColumn Header="Mã SP" Binding="{Binding MaSp}" Width="80"/>                <DataGridTextColumn Header="Tên sản phẩm" Binding="{Binding TenSp}" Width="120"/>                <DataGridTextColumn Header="Tên loại sản phẩm" Binding="{Binding TenLoai}" Width="160"/>                <DataGridTextColumn Header="Số lượng" Binding="{Binding SoLuong}" Width="120"/>                <DataGridTextColumn Header="Đơn giá" Binding="{Binding DonGia}" Width="120"/>                <DataGridTextColumn Header="Thành tiền" Binding="{Binding ThanhTien}" Width="*"/>
            </DataGrid.Columns>        </DataGrid>
    </Grid>
</Window>
